{

    "manifest_version": 2,
    "name": "Tab Flow",
    "version": "1.0.0",
  
    "description": "Logs tab events.",
    "browser_action": {
        "browser_style": true,
        "default_title": "Tab Flow",
        "default_popup": "popup.html",
        "default_icon": "icons/icon48.png"
      },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      },
      "permissions": [
        "tabs",
        "storage",
        "downloads"
      ],
      "background": {
          "scripts": ["background.js"]
      }
  
  }