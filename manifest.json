{

    "manifest_version": 2,
    "name": "Tab Flow",
    "version": "1.0",
  
    "description": "Logs tab events.",
    "browser_action": {
        "browser_style": true,
        "default_title": "Tab Flow",
        "default_popup": "popup.html"
      },
    "icons": {
        "48": "icons/border-48.png"
      },
      "permissions": [
        "tabs",
        "storage",
        "downloads"
      ],
      "background": {
          "scripts": ["background.js"]
      }
  
  }